<div class="row">
  <div class="col-md-12">
    <div class="col-md-6 mx-auto">
      <div class="page-header">
        <table class="table table-hover">
          <thead>
            <tr class="table-primary">
              <th>送信者</th>
              <th>メッセージ</th>
              <th colspan="1"></th>
            </tr>
          </thead>
          <tbody>
            <% room.messages.each do |message| %>
            <tr>
              <td>
         　    <%= link_to user_path(message.user) do%>
                <%= message.user.name %>
              <% end %>
              </td>
              <td><%= message.body %></td>
              <td>
                <% if message.user == current_user %>
                <%= link_to '削除', message, method: :delete, remote: true, data: { confirm: '本当に削除してもよろしいですか？' }, class: 'btn-sm btn-danger' %>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

