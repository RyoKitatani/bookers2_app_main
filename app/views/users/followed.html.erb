<%= render 'books/list', book: @book, user: @user %>
<div class="col-md-8 offset-md-1">
<h1>Follower User</h1>
<% if @user.follower_user.exists? %>
    <table class=table>
        <thread>
            <tr>
                <th>image</th>
                <th>name</th>
                <th colspan="3"></th>
            </tr>
        </thread>
        <tbody>
            <% @user.follower_user.each do |user| %>
                <tr>
                <td>
                    <%= attachment_image_tag user, :profile_image, size: '40x40', fallback: "no_image.jpg"%>
                </td>
                <td>
                    <%= user.name %>
                </td>
                <td>
                    <%= "フォロー数: #{user.follower.count}" %>
                </td>
                <td>
                    <%= "フォロワー数: #{user.followed.count}" %> 
                </td> 
                <td>
                    <%= link_to "Show", user_path(user.id) %>
                </td>
                </tr>
            <% end %>
        </tbody>
    </table>
<% else %>
<table class=table>
    <thread>
        <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
        </tr>
    </thread>
    <tbody>
        <tr>
            <th></th>
            <th></th>
            <th>フォロー数:0</th>
            <th>フォロワー数:0</th>
            <th>Show</th>
        </tr>
        </tbody>
</table>
<br>
<p>ユーザーはいません</p>
<% end %>