<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<div id="error_explanation">
    <% if @user.errors.any? %>
        <h2><%= @user.errors.count %> error prohibited this obj from being saved:</h2>
        <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
        </ul>
    <% end %>
</div>
            <h2>User info</h2>  
            <%= form_with model: @user, local: true do |f| %>
            <div class="form-group">
                <label for="user_name">Name</label><br>
                <%= f.text_field :name, class:"form-control name", autofocus: true, id:"inputname"%>
            </div>
            <div class="form-group">
                <label for="useer_Image">ProfileImage</label><br>
                <%= f.attachment_field :profile_image, class:"form-control-file user_image", placeholder: "プロフィール画像" %>
            </div>
            <div class="form-group">
                <label for="user_introduction">introduction</label><br>
                <%= f.text_area :introduction, class:"form-control introduction", autofocus: true, id:"inputintroduction" %>
            </div>
            <div class="form-group">
                <%= f.submit "Update User", class:"btn btn-secondary"%>
            </div>
            <% end %>
        </div>
    </div> 
</div>


