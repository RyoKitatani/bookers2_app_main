<%= render 'books/list', book: @book, user: @user, is_room: @is_room, room: @room, entry: @entry %>

<div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">
        <tbody>
            <thead>
                <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Opinipn</th>
                    <th colspan="3"></th>
                </tr>
            </thead>
        </tbody>
        <tbody>
        <% @books.each do |book| %>
            <tr>
            <td>
                <%= link_to user_path(@user) do %>
                <%= attachment_image_tag @user, :profile_image, size: '40x40', fallback: "no_image.jpg"%>
                <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %><%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
            <td><%= link_to "コメント数: #{book.book_comments.count}", book_path(book.id) %></td>
            </tr>
        <% end %>
        </tbody>
    </table>        
</div>
</div>
</div>