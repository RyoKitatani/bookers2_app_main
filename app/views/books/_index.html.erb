<table class="table table-hover table-inverse">
      <thread>
          <tr>
             <th colspan="1"></th>
              <th colspan="1"></th>
              <th>User id</th>
              <th>User Image</th>
              <th>User Name</th>
              <th>Title</th>
              <th>Opinipn</th>
              <th colspan="1"></th>
          </tr>
      </thread>
      <tbody>
        <% books.each do |book| %>
          <tr>
            <th colspan="1"></th>
            <th colspan="1"></th>
            <th><%= "#{book.user.id}" %></th>
             <th><%= link_to user_path(book.user) do %>
            <%= attachment_image_tag book.user, :profile_image, size: '40x40', fallback: "no_image.jpg"%>
            <% end %></th>
            <td><%= book.user.name%></td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <th colspan="1"></th>
          </tr>
        <% end %>
      </tbody>
  </table>